
<form>
  <input onclick="location.href='/dashboard/checkbox?value=zoom';" type="radio" name="transition" value="zoom" > Zoom<br>
  <input onclick="location.href='/dashboard/checkbox?value=rZoom';" type="radio" name="transition" value="rotatingZoom" > Rotating Zoom<br>
  <input onclick="location.href='/dashboard/checkbox?value=fade';" type="radio" name="transition" value="fade" > Slow Fade<br>
  <input onclick="location.href='/dashboard/checkbox?value=slide';" type="radio" name="transition" value="slide" checked> Slide  <br>

</form> 
      
      <h2>Transition choice {{transition}}</h2>

      <div class="field">
          <h2>Speed</h2>
         
          <input style="width:400px" class="slider" type="range" min=".5" max="5"
                   value="2" step=".5" onChange="sliderChange(this.value)" name="delay"/> 
                     
          Picture change after: <span id="sliderStatus">2</span> seconds
          
        </div>
        <div>
         <ul class="bxslider">
           
          {{#each album.image}}
            {{#if tags }}
            <li>
              <img src="{{split}}upload/l_{{logo}},w_{{logoWidth}},c_scale,g_north_east,o_80/w_iw,h_ih/l_text:Arial_{{textHeight}}_bold:{{tags}},co_rgb:fff,g_north_west,a_-30,x_45,y_80{{split1}}" title="Blue Lizard"/></li>

           {{else}}
            
           <li>
              <img src="{{split}}upload/l_{{logo}},w_{{logoWidth}},c_scale,g_north_east,o_70/w_0.98,c_crop,g_center/w_iw,h_ih{{split1}}" title="Blue Lizard9"/>
            </li>
            {{/if}}

          {{/each}}
         </ul>
        </div>
             <h2><a href="" id="reload-slider">RELOAD SETTINGS</a></h2>
      
         <script>
           var slider = $('.bxslider').bxSlider({
                            mode: 'horizontal',
                            moveSlides: 1,
                            slideMargin: 40,
                            infiniteLoop: true,
                            slideWidth: 400,
                            minSlides: 1,
                            maxSlides: 1,
                            pause: 2000,
                            pager: false,
                            speed: 2000,
                            auto: true,
                        });
           
           function sliderChange(val){
                    document.getElementById('sliderStatus').innerHTML = val;
                      console.log(val + " slider value");
                      delay = val;
                      
                }
           $('#reload-slider').click(function(e){
           e.preventDefault();
           slider.reloadSlider({
            mode: 'horizontal',
            auto: true,
            slideWidth: 400,
            speed: delay*1000,
            pager: false,
            pause: delay*1000

           });
     });
           
      </script>