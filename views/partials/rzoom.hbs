             <h2><a href="" id="reload-slider">RELOAD SETTINGS</a></h2>
      
         <script>
           var slider = $('.bxslider').bxSlider({
                            mode: 'fade',
                            moveSlides: 1,
                            slideMargin: 40,
                            infiniteLoop: true,
                            slideWidth: 400,
                            minSlides: 1,
                            maxSlides: 1,
                            pause: 200,
                            pager: false,
                            speed: 1,
                            auto: true,
                        });
           
           function sliderChange(val){
                    document.getElementById('sliderStatus').innerHTML = val;
                      console.log(val + " slider value");
                      delay = val;
                      
                }
           $('#reload-slider').click(function(e){
           e.preventDefault();
           slider.reloadSlider({
            mode: 'fade',
            auto: true,
            slideWidth: 400,
            speed: 1,
            pager: false,
            pause: delay*100

           });
     });
           
      </script>